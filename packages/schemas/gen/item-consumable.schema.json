{
  "$ref": "#/definitions/DmItemConsumable",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "DmItemConsumable": {
      "additionalProperties": false,
      "properties": {
        "class": {
          "const": "dmConsumable",
          "type": "string"
        },
        "description": {
          "examples": [
            "Ring this lucky bell to summon some shambling undead help in time of need."
          ],
          "type": "string"
        },
        "flavorText": {
          "examples": [
            "How does summoning work? We don't know."
          ],
          "type": "string"
        },
        "identified": {
          "type": "boolean"
        },
        "itemrank": {
          "const": 5,
          "type": "integer"
        },
        "itemtype": {
          "examples": [
            "Summoning Bell"
          ],
          "type": "string"
        },
        "name": {
          "examples": [
            "Pete's Lucky Bell"
          ],
          "type": "string"
        },
        "power_1": {
          "description": "Reference to a specialpowerdata/ entitydef",
          "examples": [
            "sp_modplot_pete_lucky_bell"
          ],
          "type": "string"
        },
        "sprite": {
          "description": "Reference to a spritedata/ entitydef",
          "examples": [
            "modplot_item_pete_reward_sprite"
          ],
          "type": "string"
        },
        "uses": {
          "type": "integer"
        },
        "value": {
          "type": "integer"
        }
      },
      "required": [
        "class",
        "name",
        "sprite",
        "description",
        "flavorText",
        "identified",
        "uses",
        "itemtype",
        "value",
        "itemrank",
        "power_1"
      ],
      "type": "object"
    }
  }
}
