{
  "$ref": "#/definitions/DmItems",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "DmItemConsumable": {
      "additionalProperties": false,
      "properties": {
        "class": {
          "const": "dmConsumable",
          "type": "string"
        },
        "description": {
          "examples": [
            "Ring this lucky bell to summon some shambling undead help in time of need."
          ],
          "type": "string"
        },
        "flavorText": {
          "examples": [
            "How does summoning work? We don't know."
          ],
          "type": "string"
        },
        "identified": {
          "type": "boolean"
        },
        "itemrank": {
          "const": 5,
          "type": "integer"
        },
        "itemtype": {
          "examples": [
            "Summoning Bell"
          ],
          "type": "string"
        },
        "name": {
          "examples": [
            "Pete's Lucky Bell"
          ],
          "type": "string"
        },
        "power_1": {
          "description": "Reference to a specialpowerdata/ entitydef",
          "examples": [
            "sp_modplot_pete_lucky_bell"
          ],
          "type": "string"
        },
        "sprite": {
          "description": "Reference to a spritedata/ entitydef",
          "examples": [
            "modplot_item_pete_reward_sprite"
          ],
          "type": "string"
        },
        "uses": {
          "type": "integer"
        },
        "value": {
          "type": "integer"
        }
      },
      "required": [
        "class",
        "name",
        "sprite",
        "description",
        "flavorText",
        "identified",
        "uses",
        "itemtype",
        "value",
        "itemrank",
        "power_1"
      ],
      "type": "object"
    },
    "DmItemNonAcademyTurnIn": {
      "additionalProperties": false,
      "properties": {
        "class": {
          "const": "dmNonAcademyTurnIn",
          "type": "string"
        },
        "description": {
          "examples": [
            "A fancy yet clearly broken shovel handle."
          ],
          "type": "string"
        },
        "flavorText": {
          "examples": [
            "Someone who really likes shovels spent some time with this."
          ],
          "type": "string"
        },
        "identified": {
          "type": "boolean"
        },
        "name": {
          "examples": [
            "Broken Shovel Handle"
          ],
          "type": "string"
        },
        "plotthread_advance": {
          "description": "A tuple of strings separated by a comma. The 1st string is a reference to a key in plotdata/ of classType `dmPlotThread`. The 2nd string is a key in the dmPlotThread's `plotStateLookup`. The state of the plot thread will be set to this value after collecting the item.",
          "examples": [
            "modplot,found_mod_plot_item"
          ],
          "type": "string"
        },
        "sprite": {
          "description": "Reference to a spritedata entitydef",
          "examples": [
            "modplot_item_shovel_handle_sprite"
          ],
          "type": "string"
        },
        "stackable": {
          "type": "boolean"
        },
        "value": {
          "type": "integer"
        }
      },
      "required": [
        "class",
        "name",
        "sprite",
        "description",
        "flavorText",
        "identified",
        "value",
        "stackable",
        "plotthread_advance"
      ],
      "type": "object"
    },
    "DmItems": {
      "additionalProperties": {
        "anyOf": [
          {
            "$ref": "#/definitions/DmItemConsumable"
          },
          {
            "$ref": "#/definitions/DmItemNonAcademyTurnIn"
          }
        ]
      },
      "description": "A map from entityDefName to the values inside that entitydef. The name will appear in `entityDef \"<NAME_HERE>\". The value is used to generate the body of the entityDef.",
      "type": "object"
    }
  }
}
