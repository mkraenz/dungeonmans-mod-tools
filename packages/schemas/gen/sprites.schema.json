{
  "$ref": "#/definitions/DmSprites",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "DmItemSprite": {
      "additionalProperties": false,
      "properties": {
        "texturename": {
          "description": "filename *without* the .png file ending inside textures/",
          "type": "string"
        },
        "xloc": {
          "type": "integer"
        },
        "yloc": {
          "type": "integer"
        }
      },
      "required": [
        "texturename",
        "xloc",
        "yloc"
      ],
      "type": "object"
    },
    "DmMonsterSprite": {
      "additionalProperties": false,
      "properties": {
        "height": {
          "const": 128,
          "description": "Only needed for monsters, npcs, and other actors. Not needed for Item sprites.",
          "type": "number"
        },
        "texturename": {
          "description": "filename *without* the .png file ending inside textures/",
          "type": "string"
        },
        "width": {
          "const": 80,
          "description": "Only needed for monsters, npcs, and other actors. Not needed for Item sprites.",
          "type": "number"
        },
        "xloc": {
          "type": "integer"
        },
        "yloc": {
          "type": "integer"
        }
      },
      "required": [
        "height",
        "texturename",
        "width",
        "xloc",
        "yloc"
      ],
      "type": "object"
    },
    "DmSprites": {
      "additionalProperties": {
        "anyOf": [
          {
            "$ref": "#/definitions/DmMonsterSprite"
          },
          {
            "$ref": "#/definitions/DmItemSprite"
          }
        ]
      },
      "description": "A map from entityDefName to the values inside that entitydef. The name will appear in `entityDef \"<NAME_HERE>\". The value is used to generate the body of the entityDef.",
      "type": "object"
    }
  }
}
